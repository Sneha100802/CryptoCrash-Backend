{
  "info": {
    "name": "CryptoCrash API",
    "_postman_id": "12345678-1234-1234-1234-123456789abc",
    "description": "Postman collection for testing CryptoCrash backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Wallet",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/wallet/{{playerId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "wallet", "{{playerId}}"]
        }
      }
    },
    {
      "name": "Place Bet",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerId\": \"{{playerId}}\",\n  \"usdAmount\": 10,\n  \"currency\": \"BTC\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/bet/place",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "bet", "place"]
        }
      }
    },
    {
      "name": "Cashout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerId\": \"{{playerId}}\",\n  \"betCrypto\": 0.0001,\n  \"multiplier\": 2,\n  \"currency\": \"BTC\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/cashout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "cashout"]
        }
      }
    }
  ],
  "variable": [
    { "key": "playerId", "value": "REPLACE_WITH_MONGO_ID" }
  ]
}
